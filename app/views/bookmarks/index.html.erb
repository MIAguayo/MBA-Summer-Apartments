<div>
  <div>
    <h1>
      My Bookmarks
    </h1>
  </div>
</div>

<hr>

<%# "commented" out the option to add bookmarks from the bookmarks index page since they are apartment listings and the apartment names do not provide enough information. I purposely left this option out so users will just bookmark the apartments from the list or details pages %>
<% if false %>
<div>
  <div>
    <h2>
      Add a new bookmark
    </h2>

    <form action="/insert_bookmark" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="apartment_id_box">
          Apartment
        </label>

        <input type="text" id="apartment_id_box" name="query_apartment_id">
      </div>

      <button>
        Create bookmark
      </button>
    </form>
  </div>
</div>
<% end %>



<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Apartment
        </th>

        <th>
          Apartment Details
        </th>

        <th>
          City
        </th>

        <th>
          Address
        </th>

        <th>
          Price
        </th>

        <th>
          Owner
        </th>

        <th>
          Contact Information
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <% if false%>
        <th>
        
        </th>
        <% end %>

      </tr>



      <% @list_of_bookmarks.each do |a_bookmark| %>
      <%if session.fetch(:user_id) == a_bookmark.user_id %>

      <tr>
        <td>
          <%= a_bookmark.id %>
        </td>

        <td>
          <% user = User.where(:id => a_bookmark.user_id).first %>
          <%= user.first_name + " " + user.last_name%>
        </td>

        <td>
          <%= a_bookmark.apartment_id %>
        </td>

        <td>
          <a href="/apartments/<%= a_bookmark.apartment_id %>">
            Show apartment details
          </a>
        </td>

        <td>
          <% apartment = Apartment.where(:id => a_bookmark.apartment_id).first %>
          <%= apartment.city_name %>        
        </td>

        <td>
          <% apartment = Apartment.where(:id => a_bookmark.apartment_id).first %>
          <%= apartment.address %>        
        </td>

        <td>
          <% apartment = Apartment.where(:id => a_bookmark.apartment_id).first %>
          <%= apartment.price %>        
        </td>

        <td>
          <% apartment = Apartment.where(:id => a_bookmark.apartment_id).first %>
          <%= apartment.owner_name %>
        </td>

        <td>
          <% apartment = Apartment.where(:id => a_bookmark.apartment_id).first %>
          <%= apartment.owner_email %>
        </td>

        <td>
          <%= time_ago_in_words(a_bookmark.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_bookmark.updated_at) %> ago
        </td>
        <% if false %>
        <td>
          <a href="/bookmarks/<%= a_bookmark.id %>">
            Show bookmark details
          </a>
        </td>
        <% end %>

      </tr>
      <% else %>
      <% end %>
      <% end %>
    </table>
  </div>
</div>

<hr>
